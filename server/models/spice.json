  },
  "properties": {
    "id": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "cover": {
      "type": "string",
      "required": false
    },
    "introduction": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
